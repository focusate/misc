<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Update standard invoice reports to use custom (most suitable) paper format. -->
    <record id="account.account_invoices" model="ir.actions.report">
        <field name="paperformat_id" ref="report_external_layout_simple.paperformat_custom"/>
    </record>
    <record id="account.account_invoices_without_payment" model="ir.actions.report">
        <field name="paperformat_id" ref="report_external_layout_simple.paperformat_custom"/>
    </record>
</odoo>
